.container{
    display: flex;
    width: 100%;
    height: 100vh;
    background-color: bisque;
    padding: 400rpx 0 100rpx 0;
    font-size: 50rpx;
}
.input-container{
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 100rpx;
    margin: 20rpx 0;
}
.input{
    width: 150rpx;
    height: 100rpx;
    color: black;
    border-width: 10rpx;
    border-radius: 40rpx;
    border: solid;
    border-color: darkgrey;
    font-size: 100rpx;
    padding: 20rpx;
}
.button{
    margin-top: 200rpx;
    font-size: 40rpx;
    border-radius: 30rpx;
}